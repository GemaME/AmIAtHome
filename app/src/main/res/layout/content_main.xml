<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".activity.MainActivity"
    tools:showIn="@layout/activity_main">

    <ImageView
        android:id="@+id/title_app"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="30dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/title"/>

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/title_app"
        >

        <android.support.v7.widget.CardView
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/card_distance"
            android:layout_width="0dp"
            android:layout_height="180dp"
            android:layout_marginRight="8dp"
            android:layout_weight="1"
            card_view:cardElevation="0dp"
            card_view:cardBackgroundColor="#3cffffff">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:padding="16dp"
                >

                <TextView
                    android:id="@+id/distance_quantity"
                    android:text="175"
                    android:textColor="#FFF"
                    android:textSize="45sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"/>

                <TextView
                    android:id="@+id/distance_label"
                    android:text="@string/distance_left"
                    android:textColor="#FFF"
                    android:textSize="20sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@+id/distance_quantity" />

            </RelativeLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/card_vehicle"
            android:layout_width="0dp"
            android:layout_height="180dp"
            android:layout_weight="1"
            android:layout_marginLeft="8dp"
            card_view:cardElevation="0dp"
            card_view:cardBackgroundColor="#3cffffff">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="16dp"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/vehicle_pic"
                    android:src="@drawable/people"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_centerHorizontal="true"/>

                <TextView
                    android:id="@+id/vehicle_type"
                    android:text="@string/activity_walking"
                    android:textColor="#FFF"
                    android:textSize="20sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/vehicle_pic"
                    android:layout_centerHorizontal="true"/>

            </RelativeLayout>

        </android.support.v7.widget.CardView>

    </LinearLayout>


    <SeekBar
        android:id="@+id/upload_seekbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/linearLayout" />

    <TextView
        android:id="@+id/upload_time"
        android:text="Each 10 seconds"
        android:textColor="#FFF"
        android:textSize="16sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_below="@+id/upload_seekbar"
        android:gravity="center_horizontal"
        android:background="@drawable/back_blue"/>

    <ImageButton
        android:id="@+id/btn_browser"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_below="@+id/upload_time"
        android:layout_toLeftOf="@+id/nothig_view"
        android:background="@drawable/browser"/>

    <View
        android:id="@+id/nothig_view"
        android:layout_width="10dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/upload_time"/>

    <ImageButton
        android:id="@+id/btn_home"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_below="@+id/upload_time"
        android:layout_toRightOf="@+id/nothig_view"
        android:background="@drawable/home"/>


</RelativeLayout>
